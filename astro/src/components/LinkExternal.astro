---
import { Icon } from "astro-icon/components";
const { href } = Astro.props;
const url = new URL(href)
---

<a href={href} target="_blank" class="text-primary underline underline-offset-4 flex justify-between">
    <span>{url.host}</span>
    <Icon name="open" class="self-end" size="20px"/>
</a>
