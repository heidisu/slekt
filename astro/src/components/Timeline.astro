---
import { Icon } from 'astro-icon/components';
import type { Item } from '../types'

export interface Props {
  items: Array<Item>;
}

const { items = []} = Astro.props as Props;

const iconclass = 'text-primary dark:text-slate-200 border-primary dark:border-blue-700'
---

{
  items && items.length && (
    <div class="pt-10">
      {items.map(({ title, description, icon }, index = 0) => (
        <div class='flex'>
          <div class="flex flex-col items-center mr-4 rtl:mr-0 rtl:ml-4">
            <div>
              <div class="flex items-center justify-center">
                  <div class='w-5 h-5 p-1 rounded-full border-2 border-primary'/>
              </div>
            </div>
            {index !== items.length - 1 && <div class="w-px h-full bg-primary/50 dark:bg-slate-400/50" />}
          </div>
          <div class={`-mt-1 ${index !== items.length - 1 ? 'pb-10' : ''}`}>
            {title && <p class='font-semibold' set:html={title} />}
            {description && (
              <p
                set:html={description}
              />
            )}
          </div>
        </div>
      ))}
    </div>
  )
}