---
import astroConfig from "../../astro.config.mjs";
import Container from "./Container.astro";
import { Icon } from 'astro-icon/components';

---

<header>
    <nav id="nav" class="absolute group z-10 w-full border-b border-black/5 dark:border-white/5 bg-gray-100">
        <Container>
            <div class="relative flex flex-nowrap items-center justify-between py-3 md:py-4">
                <div class="relative z-20 flex w-full justify-between md:px-0 lg:w-fit">
                    <a href=`/${astroConfig.base}/#home` aria-label="logo" class="flex items-center space-x-2">
                        <div aria-hidden="true" class="flex space-x-1">
                            <Icon name="house" class="text-4xl text-primary" />
                        </div>
                        <span class="text-2xl font-bold text-gray-900 dark:text-white">Slekt</span>
                    </a>
                </div>
                <div class="relative flex items-center">
                    <a href="https://github.com/heidisu/slekt" target="_blank"><Icon name="github" class="text-3xl"/></a>
                </div>
                <div id="navLayer" aria-hidden="true" class="fixed inset-0 z-10 h-screen w-screen origin-bottom scale-y-0 bg-white/70 backdrop-blur-2xl transition duration-500 group-data-[state=active]:origin-top group-data-[state=active]:scale-y-100 dark:bg-gray-950/70 lg:hidden"></div>
            </div>
        </Container>
    </nav>
</header>