---
const { title } = Astro.props;
---
<!doctype html>
<html lang="no">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 20px;
		width: 100%;
		height: 100%;
	}
</style>
